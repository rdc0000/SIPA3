@model IEnumerable<SIPA.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h2>Pedido</h2>

<p>
    <a asp-action="Create"><button class="btn btn-warning">Nuevo</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autoservicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetodoPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Domicilio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado.Nombre)
                @Html.DisplayFor(modelItem => item.Empleado.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autoservicio.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                @Html.DisplayFor(modelItem => item.Cliente.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetodoPago.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domicilio.DomicilioID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaHora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PedidoID" class="btn btn-success">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PedidoID" class="btn btn-primary">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.PedidoID" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
