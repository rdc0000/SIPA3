@model IEnumerable<SIPA.Models.Articulo>

@{
    ViewData["Title"] = "Index";
}

<h2>Articulo</h2>

<p>
    <a asp-action="Create"><button class="btn btn-warning">Nuevo</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioProveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVenta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioProveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArticuloID" class="btn btn-success">Editar</a>  |
                <a asp-action="Details" asp-route-id="@item.ArticuloID" class="btn btn-primary">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.ArticuloID" class="btn btn-danger">Eliminar</a> 
            </td>
        </tr>
}
</tbody>
</table>
