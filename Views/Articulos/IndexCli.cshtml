@model IEnumerable<SIPA.Models.Articulo>
@{
    ViewData["Title"] = "IndexCli";
}
@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <a href="#"><img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Imagen)" width="300" height="200" alt=""></a>
            <div class="card-body">

                <h4 class="card-title">

                    @Html.DisplayFor(modelItem => item.Nombre)

                </h4>
                <h5>@Html.DisplayFor(modelItem => item.PrecioVenta)</h5>

                <p class="card-text">Frijol enlatado listo para consumir</p>
                <input type="number" id="cantidad" class="cantidad form-control" placeholder="Cantidad" aria-label="cantidad">
               
                <div class="input-group mb-3 ">

                    @if (item.PrecioProveedor > 100)
                    {
                        int ope = 2 * item.PrecioVenta;
                        <input class="form-control" type="text" placeholder="@ope" readonly>
                        
                    }

                    <div class="input-group-append">
                        <button class="btn btn-outline-warning btn-block" type="button" id="button-addon2"><i class="fas fa-cart-arrow-down"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
